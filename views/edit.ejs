<%- include("partials/header") %>
<div class="ui main text container segment">
    <div class="ui huge header">Bewerken: <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>"> 
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>"> 
        </div>
        <div class="field">
            <label>Website (extra info)</label>
            <input type="text" name="blog[website]" value="<%= blog.website %>">    
        </div>
        <div class="field">
            <label>Blog Content</label>
                <textarea name="blog[body]"><%= blog.body %> </textarea>
        </div>
        <a class="ui blue basic button" href="/blogs/<%= blog._id %>">Terug</a>
        <input class="ui green basic button right floated" type="submit">
    </form>
</div>
<%- include("partials/footer") %>