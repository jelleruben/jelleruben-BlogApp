            <label>Website (extra info)</label>
            <input type="text" name="blog[website]" placeholder="website"> 
        </div>
        <div class="field">
            <label>Blog Content</label>
                <textarea name="blog[body]"></textarea>
        </div>
        <a class="ui blue basic button" href="/blogs/">Terug</a>
        <input class="ui violet basic button right floated" type="submit">
    </form>
</div>
