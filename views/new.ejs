<%- include("partials/header") %>
<div class="ui main text container segment">
    <div class="ui huge header">Nieuwe Post</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Titel</label>
            <input type="text" name="blog[title]" placeholder="titel"> 
        </div>

        <div class="field">
            <label>Afbeelding</label>
            <input type="text" name="blog[image]" placeholder="afbeelding"> 
        </div>
